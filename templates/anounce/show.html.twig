{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<div class="shadow-lg p-3 mb-5 rounded" style="background-image: url({{anounce.coverImage}}); height: 400px;">
    <div class='titre'>
        <h1 style="font-size: 4rem; color: #fff;">{{anounce.title}}</h1>
        <p> {{anounce.intro}} </p>
	    <p>{{anounce.rooms}} Chambres à {{anounce.price}} Fcfa</p>
    </div>
</div>
<div class="row d.flex jusify-content-around">
    <div class="col-md-8  shadow-lg p-3 mb-5 rounded">

        <h3>Description:</h3>
        <p>{{anounce.desription | nl2br }}</p>
        <h3>Caractéristiques:</h3>
        <table class="table table-striped">
            <tr>
                <td>Adresse:</td>
                <td>{{anounce.address}}</td>
            </tr>
                <tr>
                <td>Chambres:</td>
                <td>{{anounce.rooms}}</td>
            </tr>
        </table>
    </div>
    <div class="col-md-4 shadow-lg p-3 mb-5 rounded">
        <h5>Proprietaire:</h5>
        <h5>Adresse:</h5>
        <h5>Contact:</h5>
        <h5>Email:</h5>
    </div>
</div>
<div class="row d.flex">
    <div class="col-md-8">
        <h5>Commentaires :</h5>
        {% for comment in anounce.comments %}
        <div class="alert alert-dismissible alert-secondary shadow-sm p-3 mb-5 rounded">
            <h5>{{comment.author}} a dit:</h5>
            <p>"{{comment.content | nl2br}}"</p>
        </div>
        {% endfor %}
    </div>
</div>

{% endblock %}